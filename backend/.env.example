# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Django Configuration
# SECURITY WARNING: keep the secret key used in production secret!
# Generate a new secret key for production: https://djecrety.ir/
SECRET_KEY=your-django-secret-key-here

# Debug mode - set to False in production
DEBUG=True

# Database Configuration
# PostgreSQL database settings for production
SQL_ENGINE=django.db.backends.postgresql
SQL_DATABASE=travel_planner
SQL_USER=postgres
SQL_PASSWORD=your-database-password-here
SQL_HOST=db
SQL_PORT=5432

# PostgreSQL Database Password
# Used by PostgreSQL container in Docker
POSTGRES_DB=travel_planner
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-database-password-here

# AI/ML API Keys
# Groq API key for AI-powered itinerary generation
# Get your API key from: https://console.groq.com/
GROQ_API_KEY=your-groq-api-key-here

# Firebase Configuration
# Path to Firebase service account JSON file
# Download from Firebase Console > Project Settings > Service Accounts
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Django Allowed Hosts
# Comma-separated list of allowed hostnames
# SECURITY: Never use '*' in production
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,[::1]

# CORS Configuration
# Allowed origins for Cross-Origin Resource Sharing
# Add your frontend domain here
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/django.log

# API Configuration
# Base URL for the backend API
REACT_APP_API_URL=http://localhost:8000/api