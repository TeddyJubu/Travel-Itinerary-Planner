# Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# ===========================================
# BACKEND ENVIRONMENT VARIABLES
# ===========================================

# Django Configuration
# SECURITY WARNING: keep the secret key used in production secret!
# Generate a new secret key for production: https://djecrety.ir/
SECRET_KEY=your-django-secret-key-here

# Debug mode - set to False in production
DEBUG=True

# Database Configuration
# PostgreSQL database settings for production
SQL_ENGINE=django.db.backends.postgresql
SQL_DATABASE=travel_planner
SQL_USER=postgres
SQL_PASSWORD=your-database-password-here
SQL_HOST=db
SQL_PORT=5432

# PostgreSQL Database Configuration
# Used by PostgreSQL container in Docker
POSTGRES_DB=travel_planner
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-database-password-here

# AI/ML API Keys
# Groq API key for AI-powered itinerary generation
# Get your API key from: https://console.groq.com/
GROQ_API_KEY=your-groq-api-key-here

# Django Allowed Hosts
# Comma-separated list of allowed hostnames
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,[::1]

# ===========================================
# FRONTEND ENVIRONMENT VARIABLES
# ===========================================

# Firebase Configuration
# Get these values from your Firebase project console: https://console.firebase.google.com/
# Firebase API Key - used for Firebase SDK authentication
REACT_APP_FIREBASE_API_KEY=your-firebase-api-key-here

# Firebase Auth Domain - your Firebase project's authentication domain
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com

# Firebase Project ID - unique identifier for your Firebase project
REACT_APP_FIREBASE_PROJECT_ID=your-project-id

# Firebase Storage Bucket - cloud storage bucket for your project
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app

# Firebase Messaging Sender ID - for Firebase Cloud Messaging
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your-sender-id

# Firebase App ID - unique identifier for your Firebase app
REACT_APP_FIREBASE_APP_ID=your-app-id

# Firebase Measurement ID - for Google Analytics integration
REACT_APP_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Backend API Configuration
# URL for the backend API server
REACT_APP_API_URL=http://localhost:8000/api

# Development Configuration
# Enable file watching polling for development
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true

# ===========================================
# SETUP INSTRUCTIONS
# ===========================================
# 1. Copy this file to .env in the root directory
# 2. Copy backend/.env.example to backend/.env
# 3. Copy frontend/.env.example to frontend/.env
# 4. Fill in all the placeholder values with your actual credentials
# 5. Never commit .env files to version control!